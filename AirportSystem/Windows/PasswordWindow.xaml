<Window x:Class="AirportSystem.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Изменение пароля" Height="360" Width="320" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Старый пароль"/>
            <PasswordBox HorizontalContentAlignment="Center" Name="OldPass" Margin="10"/>
            <TextBlock Text="Новый пароль"/>
            <PasswordBox HorizontalContentAlignment="Center" Name="NewPassText" Margin="10"/>
            <TextBlock FontSize="16" Text="Повтор"/>
            <PasswordBox HorizontalContentAlignment="Center" Name="RetryPassText" Margin="10"/>
            <Button Click="ChangeBtn_Click" Margin="10,10,10,10" Height="50" Content="Сменить"/>
        </StackPanel>
    </Grid>
</Window>
